store = {}

kash = {}

kash.set = (key, value, milliseconds) ->
  if not store[key]?
    store[key] = value
    setTimeout () ->
      delete store[key]
    , (milliseconds or 2000)

kash.get = (key) ->
  store[key] or null

kash.del = (key) ->
  delete store[key]

kash.flush = ->
  store = {}

kash.size = ->
  Object.keys(store).length

kash.keys = ->
  Object.keys(store)

exports = module.exports = kash